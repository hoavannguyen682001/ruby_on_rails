<div class="container py-5 h-100">
  <div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
      <div class="card shadow-2-strong" style="border-radius: 1rem;">
        <h3 class="card-header text-center ">Sign Up</h3>
        <div class="card-body p-5 ">

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <!-- Email input -->
            <div class="form-outline form-white mb-4">
              <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control" ,
                  placeholder: "Email@gmail.com" %>
            </div>

            <!-- Password input -->
            <div class="form-outline form-white mb-4">
              <%= f.label :password, class: "text-start" %><br />
                <%= f.password_field :password, autocomplete: "current-password" , class: "form-control" ,
                  placeholder: "Password" %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="field form-check d-flex justify-content-start mb-3 mt-3">
                <%= f.check_box :remember_me, class: "form-check-input me-2" %>

                  <%= f.label :remember_me %>
              </div>
              <% end %>

                <!-- Submit button -->
                <div class="d-grid">
                  <%= f.submit "Log In" , class: "btn btn-secondary" %>
                </div>

                <hr class="my-4">
                <div class="text-center">
                  <span>Don't have an account?</span>
                  <%= render "devise/shared/links" %>
                </div>
                <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
